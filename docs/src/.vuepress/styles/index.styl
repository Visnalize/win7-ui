.homepage
  background: url(/home-bg.jpg) no-repeat center
  background-size: cover
  background-attachment: fixed
  display: flex
  flex-direction: column
  min-height: 100vh

  &:not(.sidebar-open)
    .sidebar-button
      color: #fff

  .navbar
    background: none
    border: none
    
    .site-name
      display: none
    
    .links
      background: rgba(255, 255, 255, 0.5)
      border-radius: 2rem
      padding: 0.5rem 1rem

      .nav-link
        color: #000

  .home
    background: url(/window-frame.png) no-repeat
    background-size: 100% 100%
    height: 100%
    margin: auto
    padding: 2rem

    .center
      text-align: center

    .hero

      .description
        max-width: 30rem
    
    .footer
      border: none
      margin: 4rem 0 0
      padding: 0

    .content__footer
      display: none

@media (min-width: 719px)
  .home
    min-width: 600px

@media (max-width: 719px)
  .homepage
    .search-box input
      left: initial